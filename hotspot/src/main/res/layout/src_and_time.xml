<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/set_top_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:textColor="#fcaf3b"
        android:textSize="12sp"
        android:text="置顶"/>

    <TextView
        android:id="@+id/news_src_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/set_top_tv"
        android:layout_marginRight="16dp"
        android:textSize="12sp"
        android:textColor="#bdbdbd"
        android:text="光明网"/>

    <TextView
        android:id="@+id/comment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/news_src_tv"
        android:layout_marginRight="16dp"
        android:textSize="12sp"
        android:textColor="#bdbdbd"
        android:drawableLeft="@drawable/comment_logo"
        android:drawablePadding="4dp"
        android:text="1252"/>

    <TextView
        android:id="@+id/pub_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/comment_tv"
        android:textSize="12sp"
        android:textColor="#bdbdbd"
        android:text="1分钟"/>

    <TextView
        android:id="@+id/be_hot_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="12sp"
        android:textColor="#fcaf3b"
        android:text="已上热榜"/>

</RelativeLayout>